{
    "service_instance_name": "{{ extra_app_domain }}",
    "configuration": {
        "gslb_service": {
            "zone": "{{ extra_app_domain }}",
            "load_balanced_records": {{ var_current_configuration.gslb_service.load_balanced_records | combine(var_new_lbr) }},
            "monitors": {{ var_current_configuration.gslb_service.monitors | combine(var_new_monitor) }},
            "pools": {{ var_current_configuration.gslb_service.pools | combine(var_new_pool) }},
            "virtual_servers": {{ var_current_configuration.gslb_service.virtual_servers | combine(var_new_virtual_server) }},
            "regions": {
                "regions_EU": {
                    "display_name": "Europe",
                    "sectors": [
                                {
                                    "code": "EU",
                                    "scale": "continent"
                                }
                            ]
                },
                "regions_Everywhere": {
                    "display_name": "Everywhere",
                    "sectors": [
                       {
                            "code": "EU",
                            "scale": "continent"
                       },
                        {
                            "code": "NA",
                            "scale": "continent"
                        },
                        {
                            "code": "AN",
                            "scale": "continent"
                        },
                        {
                            "code": "AS",
                            "scale": "continent"
                        },
                        {
                            "code": "OC",
                            "scale": "continent"
                        },
                        {
                            "code": "SA",
                            "scale": "continent"
                        },
                        {
                            "code": "AF",
                            "scale": "continent"
                        }
                    ]
                }
            }
        }
    }
}
